# Server
PORT=8080
HOST=localhost

# Database
# Приоритетный способ - через DATABASE_URL
DATABASE_URL="postgres://satoru@127.0.0.1:5432/melloFinder"

# Альтернативный способ - отдельные параметры (используются если DATABASE_URL пустая)
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=postgres
# DB_PASSWORD=your_db_password
# DB_NAME=your_app_db
DB_SSLMODE=disable

# JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h

# Invite
INVITE_EXPIRES_IN=72h

# SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password  # App Password, не обычный пароль!
SMTP_FROM=noreply@mellofinder.com
SMTP_USE_TLS=true

# App Settings
APP_NAME=MelloFinder
FRONTEND_URL=http://localhost:3000

# Production settings
ENV=development
DISABLE_AUTO_MIGRATION=false
